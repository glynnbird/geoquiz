doctype html
html(lang="en")
head
  title GeoQuiz - Test your Geography knowledge in this interactive quiz
  meta(charset="utf-8")
  meta(name="viewport",content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
  script(src="//code.jquery.com/jquery-1.11.0.min.js")
  link(rel="stylesheet",href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css")
  link(rel="stylesheet",href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css")
  script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js")
  link(rel="stylesheet",href="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css")
  link(rel="stylesheet",href="/css/quiz.css")
body
  div#fb-root

  nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
    div.container-fluid
      div.navbar-header.hidden-xs.hidden-sm
        a.navbar-brand(href="/") GeoQuiz
      p#title.navbar-text  
      form.navbar-form.navbar-left(onsubmit="return neversubmit();")
        input#state.form-control(type="text", onkeyup="stateChange()", placeholder="place name")
      p.navbar-text
        span#livescore.label.label-success 0
        span#spacer
        span#livetimer.label.label-default 00:00
        span#spacer
      form.navbar-form.navbar-left
        button.btn.btn-danger(type="button", onclick="stopQuiz()") Stop&nbsp;
          span.glyphicon.glyphicon-stop
  div#map
  script(src="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js")
  script(src="/js/quiz.js",type="text/javascript")
 
  div#myModal.modal
    div.modal-dialog
      div.modal-content
        div.modal-header
          h4.modal-title Quiz Complete
        div.modal-body
          h2 You scored 
            span#finalscore.label.label-success 14/23
            | &nbsp;in&nbsp;
            span#finaltime.label.label-default 00:00
          h3#youmissed You missed
          ul#youmissedlist.list-group

          h4 Tell your friends about it
          p 
            a.twitter-share-button('https://twitter.com/share') Tweet
          p 
            div.fb-like(data-layout="standard", data-action="like", data-show-faces="true", data-share="true")
            
        div.modal-footer
          a(href="/")
            button.btn.btn-primary(type="button") Try another quiz

    


    
      
